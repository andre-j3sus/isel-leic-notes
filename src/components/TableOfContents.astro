---
export interface TocItem {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: TocItem[];
}

const { headings } = Astro.props;

// Filter to only show h2 and h3 (skip h1 as it's usually the title)
const tocItems = headings.filter(h => h.depth >= 2 && h.depth <= 3);
---

{tocItems.length > 0 && (
  <aside class="toc-container">
    <details class="toc-details" open>
      <summary class="toc-header">
        <svg class="toc-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
        <span>On this page</span>
        <svg class="chevron" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </summary>
      <nav class="toc-nav" aria-label="Table of contents">
        <ul class="toc-list">
          {tocItems.map((heading) => (
            <li class={`toc-item toc-depth-${heading.depth}`}>
              <a href={`#${heading.slug}`} class="toc-link">
                {heading.text}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </details>
  </aside>
)}

<style>
  .toc-container {
    margin-bottom: 1.5rem;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    background-color: var(--bg-secondary);
  }

  .toc-details {
    width: 100%;
  }

  .toc-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-primary);
    cursor: pointer;
    user-select: none;
    list-style: none;
  }

  .toc-header::-webkit-details-marker {
    display: none;
  }

  .toc-icon {
    flex-shrink: 0;
    color: var(--text-secondary);
  }

  .toc-header span {
    flex: 1;
  }

  .chevron {
    flex-shrink: 0;
    color: var(--text-muted);
    transition: transform 0.2s ease;
  }

  .toc-details[open] .chevron {
    transform: rotate(180deg);
  }

  .toc-nav {
    padding: 0 1rem 0.75rem;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .toc-item {
    line-height: 1.4;
  }

  .toc-link {
    display: block;
    padding: 0.25rem 0.5rem;
    font-size: 0.8125rem;
    color: var(--text-secondary);
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.15s ease, color 0.15s ease;
  }

  .toc-link:hover {
    background-color: var(--bg-hover);
    color: var(--text-primary);
    text-decoration: none;
  }

  .toc-link.active {
    background-color: var(--isel-primary);
    color: white;
  }

  :global([data-theme="dark"]) .toc-link.active {
    background-color: var(--link-color);
    color: var(--bg-primary);
  }

  /* Indentation for heading levels */
  .toc-depth-2 .toc-link {
    padding-left: 0.5rem;
  }

  .toc-depth-3 .toc-link {
    padding-left: 1.25rem;
    font-size: 0.75rem;
  }

  /* Desktop: sticky sidebar TOC */
  @media (min-width: 1400px) {
    .toc-container {
      position: fixed;
      top: 100px;
      /* Position to the right of the main content: 
         - Sidebar is 280px
         - Main content is max 900px centered
         - Calculate: sidebar + half of remaining space + half of content width + gap */
      left: calc(280px + ((100vw - 280px - 900px) / 2) + 900px + 2rem);
      width: 220px;
      max-height: calc(100vh - 140px);
      overflow-y: auto;
      margin-bottom: 0;
    }

    .toc-nav {
      max-height: calc(100vh - 200px);
      overflow-y: auto;
    }
  }
  
  /* Hide TOC sidebar when there's not enough space */
  @media (min-width: 1400px) and (max-width: 1599px) {
    .toc-container {
      width: 180px;
      font-size: 0.9em;
    }
  }
</style>

<script>
  // Highlight current section on scroll
  function initTocHighlight() {
    const tocLinks = document.querySelectorAll('.toc-link');
    const headings = document.querySelectorAll('h2[id], h3[id]');
    
    if (tocLinks.length === 0 || headings.length === 0) return;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const id = entry.target.getAttribute('id');
            tocLinks.forEach((link) => {
              link.classList.toggle('active', link.getAttribute('href') === `#${id}`);
            });
          }
        });
      },
      {
        rootMargin: '-80px 0px -80% 0px',
        threshold: 0,
      }
    );

    headings.forEach((heading) => observer.observe(heading));
  }

  // Run on page load
  initTocHighlight();

  // Re-run on Astro page transitions
  document.addEventListener('astro:page-load', initTocHighlight);
</script>
