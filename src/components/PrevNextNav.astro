---
import type { PrevNextNav } from '@lib/navigation';

interface Props {
  nav: PrevNextNav;
}

const { nav } = Astro.props;
const { prev, next } = nav;
---

{(prev || next) && (
  <nav class="prev-next-nav" aria-label="Page navigation">
    <div class="nav-links">
      {prev ? (
        <a href={prev.href} class="nav-link prev">
          <span class="nav-direction">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
            Previous
          </span>
          <span class="nav-title">{prev.title}</span>
        </a>
      ) : (
        <div class="nav-placeholder"></div>
      )}
      
      {next ? (
        <a href={next.href} class="nav-link next">
          <span class="nav-direction">
            Next
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </span>
          <span class="nav-title">{next.title}</span>
        </a>
      ) : (
        <div class="nav-placeholder"></div>
      )}
    </div>
  </nav>
)}

<style>
  .prev-next-nav {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border-color);
  }
  
  .nav-links {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
  }
  
  .nav-link {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 1rem;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s ease;
    max-width: 45%;
    min-width: 0;
  }
  
  .nav-link:hover {
    border-color: var(--isel-primary);
    background-color: var(--bg-secondary);
    text-decoration: none;
  }
  
  .nav-link.prev {
    align-items: flex-start;
  }
  
  .nav-link.next {
    align-items: flex-end;
    margin-left: auto;
  }
  
  .nav-direction {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
  }
  
  .nav-direction svg {
    flex-shrink: 0;
  }
  
  .nav-title {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--isel-primary);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 100%;
  }
  
  :global([data-theme="dark"]) .nav-title {
    color: var(--link-color);
  }
  
  .nav-placeholder {
    flex: 1;
  }
  
  @media (max-width: 640px) {
    .nav-links {
      flex-direction: column;
    }
    
    .nav-link {
      max-width: 100%;
    }
    
    .nav-link.next {
      align-items: flex-start;
      margin-left: 0;
    }
    
    .nav-link.next .nav-direction {
      flex-direction: row-reverse;
    }
  }
</style>
